version: '3.6'

services:
  db:
    restart: always
    image: mysql:5.7
    volumes:
      - db_data:/var/lib/mysql
      - ../config/mysql:/etc/mysql/conf.d
    environment:
      MYSQL_ROOT_PASSWORD: <%= @config['database']['password'] %>
    deploy:
      placement:
        constraints: [node.labels.db == mysqldb]

  influxdb:
    image: influxdb:1.7.10
    restart: always
    volumes:
      - influx_data:/var/lib/influxdb
      - ../config/influxdb/build_candles.sql:/build_candles.sql
      - ../config/influxdb/arke.sql:/arke.sql
      - ../config/influxdb/peatio.sql:/peatio.sql
    environment:
       INFLUXDB_ADMIN_ENABLED: "true"

  redis:
    image: redis:4.0.10
    restart: always
    volumes:
      - redis_data:/data

  rabbitmq:
    image: rabbitmq:3.7.6-management
    restart: always
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq

  vault:
    image: vault:1.3.0
    restart: always
    volumes:
      - vault_data:/vault
    command:
      - server
    ports:
      - "8200:8200"
    cap_add:
      - IPC_LOCK
    environment:
      VAULT_LOCAL_CONFIG: '{"backend": {"mysql": {"username":"root", "password":"changeme", "address":"db"}},"listener": {"tcp": {"address": "0.0.0.0:8200", "tls_disable": 1}}, "ui": true, "disable_mlock": true, "default_lease_ttl": "168h", "max_lease_ttl": "720h"}'
      VAULT_ADDR: http://vault:8200
    deploy:
      placement:
        constraints: [node.role == manager]

volumes:
  db_data:
  rabbitmq_data:
  redis_data:
  vault_data:
  influx_data:
